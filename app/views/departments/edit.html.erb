<% content_for :admin_tools do %>
  <% if @department && authorized?(@department) && !@department.new_record? && @department.topics.blank? %>
    <p>
      <%= link_to "Delete This Department", @department, :method => :delete, :confirm => "Are you sure you want to delete this department?" %>
    </p>
  <% end %>
<% end %>

<div class="department-details" class="content-section">
	<% form_for( @department, :url => { :action => "update" } ) do |f| %>
		<%= render :partial => "form_fields", :locals => { :f => f }%>	
		<br/><%= submit_tag "Make Changes" %>
		<%= link_to "Cancel", manage_departments_path %>
	<% end %>
</div>

<%= render :partial => "users/new_instructor_dialog", :locals => { :item => @department }%>
