<%= simple_form_for(@reservation) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :user %>
    <%= f.association :session %>
    <%= f.input :cancelled %>
    <%= f.input :attended %>
    <%= f.input :special_accommodations %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
