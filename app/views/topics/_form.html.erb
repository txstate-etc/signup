<%= simple_form_for(@topic) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :url %>
    <%= f.input :minutes %>
    <%= f.input :inactive %>
    <%= f.input :certificate %>
    <%= f.input :survey_type %>
    <%= f.input :survey_url %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
