<div class="topic-details" class="content-section">
	<% form_for @topic, :url => { :action => "update" }, :html => { :multipart => true } do |f| %>
		<%= render :partial => "form_fields", :locals => { :f => f }%>
		<br/><%= submit_tag "Make Changes" %>
		<%= link_to "Cancel", @topic %>
	<% end %>
</div>	

