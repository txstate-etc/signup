<% if @sessions.count == 0 %>
  <div class="empty-list">
    <p>Sorry, there are no upcoming sessions at this time. Please check again later!</p>
  </div>
<% else %>
  <% @sessions.keys.sort.each do |site| %>
    <div class="content-section">
      <h2><%= site.name %></h2>
      <ul class="topic-list">
        <% @sessions[site].sort {|a,b| a.topic.name <=> b.topic.name }.each do |session| %>
          <li>
            <%= link_to session.topic.name, session.topic %>
            <div class="session-info">
              <span class="session-link"><%= link_to_session session %></span>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
