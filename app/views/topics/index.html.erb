<% content_for :admin_tools do %>
    <p><%= link_to "Create New Topic", new_topic_path %></p>
<% end %>
 
<% content_for :sidebar do %>
  <div class="download-link download-calendar">
    <%= link_to "[add all topic sessions to calendar]", :protocol => "webcal", :controller => 'sessions', :host => request.host, :port => request.port, :action => 'download' %>
  </div>
<% end %>
   

<div id="group-by-dept" class="notice"><%= link_to '(group by department)', departments_path %></div>

<ul id="topic-list">
	<% @topics.each do |topic| %>
		<li>
			<%= link_to topic.name, topic %>
		</li>
	<% end %>
</ul>

