<h1>Listing topics</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Url</th>
      <th>Minutes</th>
      <th>Inactive</th>
      <th>Certificate</th>
      <th>Survey type</th>
      <th>Survey url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.name %></td>
        <td><%= topic.description %></td>
        <td><%= topic.url %></td>
        <td><%= topic.minutes %></td>
        <td><%= topic.inactive %></td>
        <td><%= topic.certificate %></td>
        <td><%= topic.survey_type %></td>
        <td><%= topic.survey_url %></td>
        <td><%= link_to 'Show', topic %></td>
        <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
        <td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Topic', new_topic_path %>
